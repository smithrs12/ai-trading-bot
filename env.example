# Alpaca Trading API (Required)
APCA_API_KEY_ID=your_alpaca_api_key_here
APCA_API_SECRET_KEY=your_alpaca_secret_key_here
APCA_API_BASE_URL=https://paper-api.alpaca.markets

# Discord Alerts (Optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# News API (Optional)
NEWS_API_KEY=your_news_api_key_here

# Google Sheets Logging (Optional)
GSHEET_ID=your_google_sheet_id_here
GSPREAD_JSON_PATH=./google-credentials.json

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Trading Parameters (Optional - defaults in config.py)
MAX_PORTFOLIO_RISK=0.02
MAX_DAILY_TRADES=10
MAX_POSITIONS=5
KELLY_MULTIPLIER=0.25

# Model Parameters (Optional)
MIN_PREDICTION_CONFIDENCE=0.6
SENTIMENT_OVERRIDE_THRESHOLD=-0.5
